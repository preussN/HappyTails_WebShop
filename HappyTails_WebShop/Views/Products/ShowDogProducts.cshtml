@model IEnumerable<HappyTails_WebShop.Product>

@{
    ViewBag.Title = "Dog products";
}

<br />
<br />
<h2>Dog Products</h2>
<h4>Here you can find products that have been specifically categorized as dog products.</h4>
<br />

<div>
    <img class="center-block" src="~/Content/Pictures/dogs.jpg" height="400px" alt="Group_of_dogs" />
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
                SEK
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <p><a class="btn btn-info" href="@Url.Action("Details", "Products", new { id = item.ProductID })">Details</a></p>
            </td>
            <td>
                <p><a class="btn btn-success" href=@Url.Action("OrderNow", "ShoppingCart", new { id = item.ProductID }, null)>Add to Shopping cart</a></p>
            </td>
        </tr>
    }

</table>

<br />
<br />
@Html.ActionLink("Back to dog products", "ShowDogProducts", "Products")
<br />
@Html.ActionLink("Show me all products", "Index")
